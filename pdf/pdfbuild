linguas=$@
datestamp=`date -u +%y%m%d%H%M%S`

bitch_about_no_pdfs () {
    echo "Please run \"lysabuild bootstrap\" first."
    exit 1
}
for lang in $linguas ; do
  cp -v ../$lang/lysa.pdf pdfs/$lang/`printf "lysa-%s.pdf" $datestamp` || bitch_about_no_pdfs
done

cd pdfs
git pull
git add -A .
git commit 
git push
cd ..
